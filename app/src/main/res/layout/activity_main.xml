<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select function:"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/pick_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick image from gallery"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/camera_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera capture picture"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/camera_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera capture video"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/camera_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="multi camera"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"/>


            <ImageView
                android:id="@+id/select_image"
                android:layout_width="match_parent"
                android:layout_height="300sp"/>

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share image"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>